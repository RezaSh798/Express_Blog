<div class="row">

    <!--Form controls Start-->
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">ایجاد کاربر جدید</h3>
            </div>
            <div class="box-body">
                <div class="row mbn-20">
                    {{#if hasError}}
                    {{#each errors}}
                    <div class="alert alert-danger ml-1" role="alert">
                        {{ this }}
                    </div>
                    {{/each}}
                    {{/if}}
                    <form action="/admin/users/store" method="POST">
                        <!--Form Field-->
                        <div class="">
                            <div class="row mbn-15">
                                <div class="col-12 mb-15"><input name="full_name" type="text" class="form-control" placeholder="نام کاربری"></div>
                                <div class="col-12 mb-15"><input name="email" type="email" class="form-control" placeholder="ایمیل کاربر"></div>
                                <div class="col-12 mb-15"><input name="password" type="password" class="form-control" placeholder="گذرواژه"></div>
                            </div>

                            <!--Radio-->
                            <div class="col-lg-4 col-12 mb-20">
                                <h6 class="pt-2">نقش کاربر</h6>
                                <label><input type="radio" name="role" value="0" checked>کاربری</label>
                                <label><input type="radio" name="role" value="1">نویسندی</label>
                                <label><input type="radio" name="role" value="2">مدیر</label>
                            </div>
                            <!--Radio-->

                            <button type="submit" class="button button-primary"><span>ذخیره</span></button>

                        </div>
                        <!--Form Field-->
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--Form controls End-->
</div>