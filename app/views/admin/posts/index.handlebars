<!--Table Head Dark Start-->
<div class="row">
    <div class="col-lg-12 col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title" style="display: inline-block;">لیست مطالب</h4>
                <a href="posts/create" style="float: left;"><button class="button button-primary"><span>ایجاد مطلب جدید +</span></button></a>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>عنوان</th>
                            <th>نویسنده</th>
                            <th>تاریخ ایجاد</th>
                            <th>تعداد بازدید</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each posts}}
                        <tr>
                            <th>{{ this.id }}</th>
                            <td>{{ this.title }}</td>
                            <td>{{ this.full_name }}</td>
                            <td>{{ this.jalali_created_at }}</td>
                            <td>{{ this.views }}</td>
                            <td>
                                <a href="posts/delete/{{ this.id }}"><button class="button button-danger"><span>حذف</span></button></a>
                                <a href="posts/edit/{{ this.id }}"><button class="button button-success"><span>ویرایش</span></button></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--Table Head Dark End-->